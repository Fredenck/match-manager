{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@next/next/recommended",
    "next/core-web-vitals",
    "standard",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "indent": ["warn", 2],
    "prettier/prettier": ["error"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
